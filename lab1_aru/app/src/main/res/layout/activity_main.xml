<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/activ_main"
    android:layout_height="match_parent"
    android:layout_width="match_parent"
    android:paddingBottom="16dp"
    android:paddingLeft="16dp"
    android:paddingRight="16dp"
    android:paddingTop="16dp"
    android:background="#E5E0F1"
   >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/textLayout"
        android:orientation="vertical"
        android:layout_marginTop="20dp"
        android:background="@drawable/default_design_knopochki">
        <TextView
            android:layout_width="match_parent"
            android:layout_height="170dp"
            android:text="0"
            android:textSize="70sp"
            android:textColor="#070707"
            android:id="@+id/textView"></TextView>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_below="@+id/textLayout"
        android:layout_marginTop="10dp"
        >

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <Button
                android:layout_width="95dp"
                android:layout_height="94dp"
                android:text="AC"
                android:textSize="40sp"
                android:background="@drawable/default_outlined_button_style"/>
            <Button
                android:layout_width="95dp"
                android:layout_height="94dp"
                android:text="+/-"
                android:textSize="40sp"
                android:background="@drawable/default_outlined_button_style" />
            <Button
                android:layout_width="95dp"
                android:layout_height="94dp"
                android:text="%"
                android:textSize="40sp"
                android:background="@drawable/default_outlined_button_style"/>
            <Button
                android:layout_width="95dp"
                android:layout_height="94dp"
                android:text="/"
                android:textSize="40sp"
                android:background="@drawable/default_design_calculation"/>
        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <Button
                android:layout_width="95dp"
                android:layout_height="94dp"
                android:text="7"
                android:textSize="40sp"
                android:background="@drawable/default_design_knopochki"/>
            <Button
                android:layout_width="95dp"
                android:layout_height="94dp"
                android:text="8"
                android:textSize="40sp"
                android:background="@drawable/default_design_knopochki"/>
            <Button
                android:layout_width="95dp"
                android:layout_height="94dp"
                android:text="9"
                android:textSize="40sp"
                android:background="@drawable/default_design_knopochki"/>
            <Button
                android:layout_width="95dp"
                android:layout_height="94dp"
                android:text="*"
                android:textSize="40sp"
                android:background="@drawable/default_design_calculation"/>
        </LinearLayout>
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <Button
                android:layout_width="95dp"
                android:layout_height="94dp"
                android:text="4"
                android:textSize="40sp"
                android:background="@drawable/default_design_knopochki"/>
            <Button
                android:layout_width="95dp"
                android:layout_height="94dp"
                android:text="5"
                android:textSize="40sp"
                android:background="@drawable/default_design_knopochki"/>
            <Button
                android:layout_width="95dp"
                android:layout_height="94dp"
                android:text="6"
                android:textSize="40sp"
                android:background="@drawable/default_design_knopochki"/>
            <Button
                android:layout_width="95dp"
                android:layout_height="94dp"
                android:text="-"
                android:textSize="40sp"
                android:background="@drawable/default_design_calculation"/>
        </LinearLayout>
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <Button
                android:layout_width="95dp"
                android:layout_height="94dp"
                android:text="1"
                android:textSize="40sp"
                android:background="@drawable/default_design_knopochki"/>
            <Button
                android:layout_width="95dp"
                android:layout_height="94dp"
                android:text="2"
                android:textSize="40sp"
                android:background="@drawable/default_design_knopochki"/>
            <Button
                android:layout_width="95dp"
                android:layout_height="94dp"
                android:text="3"
                android:textSize="40sp"
                android:background="@drawable/default_design_knopochki"/>
            <Button
                android:layout_width="95dp"
                android:layout_height="94dp"
                android:text="+"
                android:textSize="40sp"
                android:background="@drawable/default_design_calculation"/>
        </LinearLayout>
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <Button
                android:layout_width="190dp"
                android:layout_height="94dp"
                android:text="0"
                android:textSize="40sp"
                android:background="@drawable/default_design_knopochki"/>

            <Button
                android:layout_width="95dp"
                android:layout_height="94dp"
                android:text="."
                android:textSize="40sp"
                android:background="@drawable/default_design_knopochki"/>
            <Button
                android:layout_width="95dp"
                android:layout_height="94dp"
                android:text="="
                android:textSize="40sp"
                android:background="@drawable/default_design_calculation"/>
        </LinearLayout>



    </LinearLayout>



</RelativeLayout>